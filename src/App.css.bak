.app {
  width: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: auto;
  padding: 20px 40px;
  background-color: var(--color-bg);
  gap: 40px;
}

.logo {
  width: 144px;
  height: 41px;
  opacity: 1;
  display: block;
  object-fit: contain;
  flex-shrink: 0;
}

.nav {
  display: flex;
  align-items: center;
  gap: 50px;
  flex: 1;
  justify-content: flex-end;
}

.nav-link {
  opacity: 1;
  text-decoration: none;
  color: var(--color-text);
  font-family: 'Josefin Sans', sans-serif;
  font-weight: 600;
  font-size: 16px;
  line-height: 1;
  letter-spacing: 0;
  white-space: nowrap;
  transition: color 0.3s ease;
}

.nav-link:hover {
  color: var(--color-primary);
}

.main {
  flex: 1;
  padding: 0 40px;
  width: 100%;
}

.hero {
  display: grid;
  grid-template-columns: 1fr 1fr;
  align-items: center;
  gap: 40px;
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
  padding: 60px 40px;
  position: relative;
}

.pod-image {
  width: 100%;
  max-width: 600px;
  height: auto;
  display: block;
  object-fit: contain;
  order: -1;
}

.product-title {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.product-title h2 {
  font-family: 'Josefin Sans', sans-serif;
  font-weight: 700;
  font-size: 48px;
  line-height: 1.2;
  letter-spacing: 0;
  margin: 0;
  color: var(--color-text);
}

.rating {
  display: flex;
  align-items: center;
  gap: 12px;
}

.star {
  width: 24px;
  height: 24px;
  display: block;
  object-fit: contain;
  flex-shrink: 0;
}

.rating-text {
  font-family: 'Josefin Sans', sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 100%;
  letter-spacing: 0;
  color: var(--color-text);
  margin-left: 10px;
}

.price-current {
  font-family: 'Josefin Sans', sans-serif;
  font-weight: 600;
  font-size: 36px;
  line-height: 100%;
  letter-spacing: 0;
  color: var(--color-text);
}

.price-old {
  font-family: 'Josefin Sans', sans-serif;
  font-weight: 400;
  font-size: 20px;
  line-height: 100%;
  letter-spacing: 0;
  text-decoration: line-through;
  color: #E11D20;
  display: inline-block;
  margin-left: 20px;
}

.delivery {
  font-family: 'Josefin Sans', sans-serif;
  font-weight: 600;
  font-size: 14px;
  line-height: 100%;
  letter-spacing: 0;
  color: #008F51;
}

.btn-add {
  width: 100%;
  max-width: 280px;
  height: 52px;
  border: none;
  border-radius: 12px;
  background-color: #008F51;
  font-family: 'Josefin Sans', sans-serif;
  font-weight: 600;
  font-size: 16px;
  line-height: 100%;
  letter-spacing: 0;
  color: #FFFFFF;
  cursor: pointer;
  transition: all 0.3s ease;
}

.btn-add:hover {
  opacity: 0.9;
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(0, 143, 81, 0.3);
}

.btn-add:active {
  transform: translateY(0);
}

.gradient-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300px;
  opacity: 1;
  display: block;
  object-fit: cover;
  object-position: center;
  pointer-events: none;
  z-index: 0;
}

.content {
  max-width: 100%;
  margin: 0;
  padding: 0;
}

.content h1 {
  font-size: calc(36px * var(--scale));
  margin-bottom: calc(20px * var(--scale));
  color: var(--color-text);
}

.content p {
  font-size: calc(16px * var(--scale));
  margin-bottom: calc(10px * var(--scale));
  color: var(--color-secondary);
}

.responsive-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(calc(300px * var(--scale)), 1fr));
  gap: calc(20px * var(--scale));
  margin-top: calc(30px * var(--scale));
}

.card {
  padding: calc(20px * var(--scale));
  background-color: #f9f9f9;
  border: 1px solid #ddd;
  border-radius: calc(8px * var(--scale));
  box-shadow: 0 calc(2px * var(--scale)) calc(8px * var(--scale)) rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.card:hover {
  transform: translateY(calc(-5px * var(--scale)));
  box-shadow: 0 calc(4px * var(--scale)) calc(16px * var(--scale)) rgba(0, 0, 0, 0.15);
}

.card h3 {
  font-size: calc(20px * var(--scale));
  margin-bottom: calc(10px * var(--scale));
  color: var(--color-primary);
}

.card p {
  font-size: calc(14px * var(--scale));
  color: var(--color-secondary);
  line-height: 1.6;
}

/* Мобильные устройства */
@media (max-width: 640px) {
  .header {
    height: calc(60px * var(--scale));
